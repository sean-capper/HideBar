{
    "name": "HideBar",
    "version": "1.0",
    "description": "Hide the sidebar on the front page of Reddit. Enabled by default.",
    "content_scripts": [
        {
          "matches": ["https://www.reddit.com/"],
          "css": ["hidebar.css"],
          "js": ["hidebar.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": false
    },
    "permissions": [
        "storage"
    ],
    "manifest_version": 2
}